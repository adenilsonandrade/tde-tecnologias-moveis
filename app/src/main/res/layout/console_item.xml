<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@android:color/system_on_primary_container_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="80dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tvImageConsole"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvConsoleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="170dp"
            app:layout_constraintTop_toTopOf="@+id/tvImageConsole"
            app:layout_constraintStart_toEndOf="@+id/tvImageConsole"
            tools:text="Produto"/>

        <TextView
            android:id="@+id/tvConsoleGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvImageConsole"
            app:layout_constraintTop_toBottomOf="@id/tvConsoleName"
            tools:text="Gender" />

        <TextView
            android:id="@+id/tvConsoleLaunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvImageConsole"
            app:layout_constraintTop_toBottomOf="@id/tvConsoleGender"
            tools:text="Launch" />

        <TextView
            android:id="@+id/tvConsolePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvImageConsole"
            app:layout_constraintTop_toBottomOf="@id/tvConsoleLaunch"
            tools:text="R$ 299,00" />

        <TextView
            android:id="@+id/tvConsoleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="0sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tvImageConsole"
            app:layout_constraintTop_toBottomOf="@id/tvConsolePrice"
            tools:text="R$ 299,00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>